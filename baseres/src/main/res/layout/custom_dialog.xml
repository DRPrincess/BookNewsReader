<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/custom_dialog_background"
    android:padding="1dp">

    <!--对话框标题-->
    <LinearLayout
        android:id="@+id/cstoumDialogMsgTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/cstoumDialogMsgTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="15sp"
            android:textColor="#666666"
            android:padding="10dp"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:background="#F2F2F2"
            />
    </LinearLayout>

    <!--内容标题-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/cstoumDialogMsgContentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#666666"
            android:paddingLeft="10dp"
            android:ellipsize="end"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="50dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/cstoumDialogMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:ellipsize="end"
            android:textColor="#666666"
            android:gravity="left"
            />

    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:background="#F2F2F2"
        />

    <!--按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/cstoumDialogLeftBtn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minHeight="50dp"
            android:background="@drawable/white_button_background"
            android:textColor="#666666"
            android:visibility="visible"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="15sp"
            />

        <View
            android:id="@+id/customLineView"
            android:visibility="gone"
            android:layout_width="0.8dp"
            android:layout_height="fill_parent"
            android:background="#F2F2F2"
            />

        <Button
            android:id="@+id/cstoumDialogRightBtn"
            android:visibility="visible"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/white_button_background"
            android:textColor="#666666"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="15sp"
            />
    </LinearLayout>
</LinearLayout>