<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:layout_height="100dp"
    >
    <View
        style="@style/deviderLine"
        android:layout_alignParentBottom="true"/>
    
    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        tools:src="@drawable/user_show_data8"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>
    


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/black_forth"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        tools:text="[基层]紧跟新时代  打造好班子"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ivImage"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_small"
        android:textColor="@color/black_secondary"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="4月27日，中央和国家机关工委召开中央和国家机关各单位机关党
委主要负责人会议，学习贯彻习近平总书记关于深化党和国家机……"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/ivImage"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"/>




</RelativeLayout>