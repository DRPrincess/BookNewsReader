<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/title_common"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:background="@color/grey_light"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_primary"
                android:textSize="@dimen/font_normal"
                android:text="头像"
                />



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivHeadImg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/list_default"
                app:civ_border_color="#F2F2F2"
                app:civ_border_width="3dp"
                android:layout_marginLeft="100dp"
                />


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_primary"
                android:textSize="@dimen/font_normal"
                android:text="姓名"
                />

            <EditText
                android:id="@+id/edtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:background="@null"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/grey_dark"
                android:hint="@string/msg_please_input"
                tools:text="赵铁柱"

                />


        </TableRow>
        <TableRow
            android:id="@+id/layoutGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_primary"
                android:textSize="@dimen/font_normal"
                android:text="性别"
                />

            <TextView
                android:id="@+id/tvSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:background="@null"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/grey_dark"
                android:hint="@string/msg_please_input"
                tools:text="赵铁柱"

                />


        </TableRow>
        <TableRow
            android:id="@+id/layoutBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_primary"
                android:textSize="@dimen/font_normal"
                android:text="出生年月"
                />

            <TextView
                android:id="@+id/tvBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:background="@null"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/grey_dark"
                android:hint="@string/msg_please_input"
                tools:text="赵铁柱"

                />


        </TableRow>
        <TableRow
            android:id="@+id/layoutIntoPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_primary"
                android:textSize="@dimen/font_normal"
                android:text="入党时间"
                />

            <TextView
                android:id="@+id/tvIntoPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:background="@null"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/grey_dark"
                android:hint="@string/msg_please_input"
                tools:text="赵铁柱"

                />


        </TableRow>
        <TableRow
            android:id="@+id/layoutEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_primary"
                android:textSize="@dimen/font_normal"
                android:text="学历"
                />

            <TextView
                android:id="@+id/tvEducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:background="@null"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/grey_dark"
                android:hint="@string/msg_please_input"
                tools:text="赵铁柱"

                />


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_primary"
                android:textSize="@dimen/font_normal"
                android:text="爱好"
                />

            <EditText
                android:id="@+id/edtHoppy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:background="@null"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/grey_dark"
                android:hint="@string/msg_please_input"
                tools:text="赵铁柱"

                />


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_primary"
                android:textSize="@dimen/font_normal"
                android:text="手机"
                />

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:background="@null"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/grey_dark"
                android:hint="@string/msg_please_input"
                tools:text="赵铁柱"

                />


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_primary"
                android:textSize="@dimen/font_normal"
                android:text="微信"
                />

            <EditText
                android:id="@+id/edtWeixin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:background="@null"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/grey_dark"
                android:hint="@string/msg_please_input"
                tools:text="赵铁柱"

                />


        </TableRow>

    </TableLayout>


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/checkboxRememberPassword"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_rectangle_solid_red_corner5"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/font_normal"
        />



</LinearLayout>